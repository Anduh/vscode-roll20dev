{
    "name": "roll20sheetdev",
    "displayName": "Roll20 Sheet Dev",
    "description": "Tools for creating Roll20 Character Sheets.",
    "version": "0.3.0",
    "publisher": "anduh",
    "icon": "images/Roll20.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/anduh/vscode-roll20dev"
    },
    "bugs": {
        "type": "git",
        "url": "https://github.com/anduh/vscode-roll20dev/issues"
    },
    "license": "MIT",
    "preview": true,
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages",
        "Language Packs",
        "Visualization",
        "Other"
    ],
    "keywords": [
        "Roll20",
        "TTRPG",
        "RPG",
        "syntax highlight"
    ],
    "contributes": {
      "html": {
        "customData": [
          "./src/html/html.html-data.json",
          "./src/html/htmlGlobalAttributes.json"
        ]
      },
      "snippets": [
        {
          "language": "html",
          "path": "./snippets/html/attribute.json"
        },
        {
          "language": "html",
          "path": "./snippets/html/elements.json"
        },
        {
          "language": "jade",
          "path": "./snippets/pug/attribute.json"
        },
        {
          "language": "jade",
          "path": "./snippets/pug/elements.json"
        },
        {
          "language": "jade",
          "path": "./snippets/pug/script.json"
        },
        {
          "language": "jade",
          "path": "./snippets/pug/syntax.json"
        },
        {
          "language": "css",
          "path": "./snippets/css.json"
        }
      ],
      "grammars": [
        {
          "scopeName": "sheetworker.js",
          "injectTo": [
            "source.html",
            "text.html",
            "text.pug"
          ],
          "path": "./syntaxes/sheetworker-js.json",
          "embeddedLanguages": {
            "meta.embedded.block.js": "js"
          }
        },
        {
          "scopeName": "rolltemplate.handlebars",
          "injectTo": [
            "source.html",
            "text.html",
            "text.pug"
          ],
          "path": "./syntaxes/rolltemplate-handlebars.json",
          "embeddedLanguages": {
            "meta.embedded.block.handlebars": "handlebars"
          }
        }
      ],
      "languages": [
        {
          "id": "handlebars",
          "extensions": [
            ".rtemplate",
            ".rolltemplate"
          ]
        },
        {
          "id": "javascript",
          "mimetypes": [
            "text/worker"
          ]
        }
      ]
    },
    "configurationDefaults": {
      "emmet.extensionsPath": [
        "./snippets/html"
      ],
      "emmet.showSuggestionsAsSnippets": false,
      "editor.snippetSuggestions": "top"
    },
    "activationEvents": [
      "onLanguage:jade"
    ],
    "main": "./out/extension.js",
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "lint": "eslint . --ext .ts,.tsx",
      "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
      "@types/node": "^12.12.0",
      "@types/vscode": "^1.32.0",
      "@typescript-eslint/eslint-plugin": "^4.16.0",
      "@typescript-eslint/parser": "^4.16.0",
      "eslint": "^7.21.0",
      "typescript": "^4.4.3",
      "webpack": "^5.64.2",
      "webpack-cli": "^4.9.1"
    }
}
